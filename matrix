void estadisticos(int n, double* v, double* min, double* max, double* mediana,
double *promedio, double *devEst){
double *copia = (double*)malloc(n*sizeof(double));
double suma=0;
double sumaDevs=0;
for(int i=0;i<n;++i) {
suma += v[i];
copia[i] = v[i];
}
for(i=0;i<n;++i) sumaDevs+= (v[i]-promedio)*(v[i]-promedio);
ordenar(n,copia);
*min = copia[0];
*max = copia[n-1];
*mediana = n %2==0?(copia[n/2]+copia[n/2-1])/2:copia[n/2];
*promedio = suma/n;
*devEst = sqrt(sumaDevs/n);
free(copia);
